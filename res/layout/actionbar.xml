<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:background="#25b6ed"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

    <TextView
        android:id="@+id/actionbar_titletextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Title"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" 
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/actionbar_backimageview"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/test_back" />
        
        <TextView 
            android:id="@+id/actionbar_leftimageview"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_margin="2dp"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:visibility="gone"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/actionbar_do1imageview"
        android:layout_width="18dp"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/actionbar_do2imageview"
        android:layout_width="18dp"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/actionbar_do1imageview"
        android:visibility="gone" 
        />

    <TextView
        android:id="@+id/actionbar_rigthtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:visibility="gone" />

</RelativeLayout>